{
    "workbench.startupEditor": "newUntitledFile",
    "files.autoSave": "onFocusChange",
    "editor.renderWhitespace": "boundary",
    "editor.wordWrapColumn": 110,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.enabled": true,
    "python.formatting.blackArgs": ["--skip-string-normalization", "--line-length=110"],
    "python.linting.flake8Args": [
        "--ignore=E501,E303,D100,D103"
    ],
    "python.linting.pylintArgs": [
        "--extension-pkg-whitelist=astropy.units",
        "--ignored-classes=astropy.units",
        "--variable-rgx=[a-z_][a-z0-9_]{0,30}$",
        "--argument-rgx=[a-z_][a-z0-9_]{0,30}$"
    ],
    "workbench.colorTheme": "Rainbow (rainglow)",
    "workbench.iconTheme": "vs-minimal",
    "editor.tabCompletion": "on",
    "editor.fontFamily": "Fira Code, Office Code Pro",
    "editor.fontSize": 13,
    "workbench.tree.indent": 12,
    "workbench.fontAliasing": "default", 
    "window.zoomLevel": 0.0,
    "editor.fontLigatures": true,
    "editor.fontWeight": "500",
    "editor.letterSpacing": -0.2,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "autoDocstring.docstringFormat": "numpy",
    "autoDocstring.quoteStyle": "'''",
    "autoDocstring.newlineBeforeSummary": true,
    "latex-workshop.latex.autoBuild.run": "never",
    "colorize.languages": [
        "css",
        "sass",
        "scss",
        "less",
        "postcss",
        "sss",
        "stylus",
        "xml",
        "svg",
        "python",
    ]
}
